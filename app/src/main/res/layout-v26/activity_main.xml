<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/edtLastName">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="9dp"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tvHello"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/registration_form"
            android:ems="10"
            android:id="@+id/txtRegistration"
            tools:layout_editor_absoluteY="36dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:autofillHints=""/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtfirstname" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRegistration" android:layout_marginStart="96dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.031" android:hint="Enter First name" android:autofillHints=""/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtlastname"
            android:autofillHints="" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/edtfirstname"
            android:layout_marginEnd="96dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="96dp"
            android:hint="enter last name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            tools:layout_editor_absoluteY="269dp" android:id="@+id/edtPhoneNumber"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:hint="Enter Phone Number"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="342dp" tools:layout_editor_absoluteX="102dp" android:id="@+id/E"
            android:hint="Enter E-mail"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="437dp" android:id="@+id/edtPassword"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:hint="Enter Password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="528dp" tools:layout_editor_absoluteX="98dp"
            android:id="@+id/edtConfirmPasswor" android:hint="Confirm Password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="SignUp"
            android:ems="10"
            tools:layout_editor_absoluteY="595dp" android:id="@+id/edtSignUp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

</android.support.constraint.ConstraintLayout>